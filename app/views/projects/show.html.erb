<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @project %>

  <div>
    <% if current_user %>
      <%= link_to "Edit this project", edit_project_path(@project) %>
    <% end %>
    <%= link_to "Back to projects", projects_path %>

    <% if current_user %>
      <%= button_to "Destroy this project", @project, method: :delete, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
